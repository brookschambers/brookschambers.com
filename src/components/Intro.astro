---
import { Content } from '../content/intro.md';
---

<div class="wrapper">
	<img width="600" height="828" class="illo" src="/assets/images/brooks-illo.svg" alt="Illustration of Brooks Chambersâ€™ face" />
	<div class="content">
		<Content />
	</div>
</div>

<style lang="scss">
	@use '../tokens' as *;

	.wrapper {
		align-items: center;
		display: grid;
		gap: 5rem;
		margin-left: auto;
		margin-right: auto;
		max-width: 52rem;
		padding-bottom: 4rem;
		padding-left: 1.5rem;
		padding-right: 1.5rem;
		padding-top: 4rem;

		@media (min-width: 600px) {
			grid-template-columns: 1fr 3fr;
			min-height: 40vw;
			padding-bottom: 0;
			padding-top: 0;
		}
	}

	.illo {
		margin-left: auto;
		margin-right: auto;
		max-width: 37.5vw;

		@media (min-width: 600px) {
			margin-left: initial;
			margin-right: initial;
			max-width: 100%;
		}
	}

	.content {
		:global(p) {
			@include typography('typography.longform');
		}
	}
</style>
