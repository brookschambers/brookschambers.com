---
export interface Props {
  src: string;
	width: number;
	height: number;
	background?: string;
	poster?: string;
}

const { src, width, height, background, poster } = Astro.props;
---

<video class="video" autoplay loop="true" muted playsinline width={width} height={height} poster={poster} style={background ? `--bg: ${background};` : undefined}>
	<source src={src} type="video/mp4" />
</video>

<style lang="scss">
	.video {
		background: var(--bg);
	}
</style>
