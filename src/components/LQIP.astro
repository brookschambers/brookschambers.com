---
export interface Props {
	sizes: string[];
	lqip?: string;
	width: number;
	height: number;
	alt?: string;
	style?: string;
}

const { sizes, lqip, width, height, alt, ...rest } = Astro.props;
---

<img {...rest} class="lqip" src={sizes[0]} width={width} height={height} style={lqip ? `background-image: url(${lqip});` : undefined} alt={alt} />

<style lang="scss">
.lqip {
	background-repeat: no-repeat;
	background-size: cover;
	user-select: none;
  width: 100%;
}
</style>
