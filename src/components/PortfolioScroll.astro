---
import Intercom from './Intercom.astro';
import Loom from './Loom.astro';
import Mode from './Mode.astro';
---

<section id="mode" class="section">
  <Mode />
</section>

<section id="loom" class="section">
	<Loom />
</section>

<section id="intercom" class="section">
	<Intercom />
</section>

<style lang="scss">
	@use 'sass:math';
	@use '../tokens' as *;

	.section {
		display: flex;
		flex-direction: column;

		> :global(*) {
			width: 100%;
		}
	}
</style>
