---
import LQIP from './LQIP.astro';
import SideCaption from './SideCaption.astro';
import Split from './Split.astro';
import Video from './Video.astro';

// Mode
import mode1 from '../images/mode/mode-website-mockup.png?w=1600&format=jpg&quality=80';
import mode1lqip from '../images/mode/mode-website-mockup.png?lqip';
import mode2 from '../images/mode/mode_logo_animation.mp4';
import mode3a from '../images/mode/mode_advertising_02.jpg';
import mode3alqip from '../images/mode/mode_advertising_02.jpg?lqip';
import mode3b from '../images/mode/mode_lanyards.jpg';
import mode3blqip from '../images/mode/mode_lanyards.jpg?lqip';
import mode4 from '../images/mode/mode_instagram_posts.mp4';
import { Content as ModeIntro } from '../content/mode.md';
import { Content as ModeCredits } from '../content/mode-credits.md';

// Intercom
---

<section id="mode" class="section">
	<LQIP sizes={[mode1]} lqip={mode1lqip.lqip} width={mode1lqip.width} height={mode1lqip.height} />
	<SideCaption orientation="right">
		<Video slot="media" src={mode2} width={1920} height={1080} background="rgb(29, 70, 52)" />
		<div slot="caption">
		  <div class="longform"><ModeIntro /></div>
			<div class="caption"><ModeCredits /></div>
		</div>
	</SideCaption>
	<div>TODO MODE GRID</div>
	<Split>
		<LQIP sizes={[mode3a]} lqip={mode3alqip.lqip} width={mode3alqip.width} height={mode3alqip.height} />
		<LQIP sizes={[mode3b]} lqip={mode3blqip.lqip} width={mode3blqip.width} height={mode3blqip.height} />
	</Split>
	<Video slot="media" src={mode4} width={1920} height={1080} background="rgb(200, 209, 194)" />
</section>

<section id="loom" class="section">
</section>

<style lang="scss">
	@use '../tokens' as *;

	.section {
		display: flex;
		flex-direction: column;

		> * {
			width: 100%;
		}
	}

	.caption {
		@include typography('typography.caption');
	}

	.longform {
		@include typography('typography.longform');
	}
</style>
